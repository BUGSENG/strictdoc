<sdoc-form diff>
  <form
    action="/diff"
    method="GET"
  >

        <input
          type="text"
          {% if left_revision is not none %}
          value={{ left_revision }}
          {% else %}
          value="73dd8f411f864382349e951c51d3c4ce1b90fd28"
          {% endif %}
          placeholder="Enter the LHS revision here"
          id="left_revision"
          name="left_revision"
        />
        {% include "components/button/diff.jinja" %}
        <input
          type="text"
          {% if right_revision is not none %}
          value={{ right_revision }}
          {% else %}
          value="HEAD+"
          {% endif %}
          placeholder="Enter the RHS revision here"
          id="right_revision"
          name="right_revision"
        />

  </form>
</sdoc-form>
