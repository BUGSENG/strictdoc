<div class="diff_node_fields">
  {# UID #}
  {%- if section.reserved_uid is not none and section.reserved_uid|length > 0 -%}
    <div
      class="diff_node_field"
      {% if section_change is none or section_change.matched_uid is none %}
        modified="{{ side }}"
      {% endif %}
    >
      {%- with badge_text = "UID" -%}
        {%- include "components/badge/index.jinja" -%}
      {%- endwith -%}
      <div class="sdoc_pre_content">{{ section.reserved_uid }}</div>
    </div>
  {%- endif %}

  {# free text #}
  {% if section.free_texts|length > 0 %}
  {% set free_text = section.free_texts[0] %}
    <div
      class="diff_node_field"
      {% if section_change is none or section_change.free_text_modified %}
        modified="{{ side }}"
      {% endif %}
    >
      {%- with badge_text = "free text" -%}
        {%- include "components/badge/index.jinja" -%}
      {%- endwith -%}
      <div class="sdoc_pre_content">
        {%- if section_change is not none -%}
          {%- set colored_diff = section_change.colored_free_text_diff -%}
          {%- if colored_diff is not none -%}
            {{ colored_diff }}
          {%- else -%}
            {{ free_text.get_parts_as_text_escaped() }}
          {%- endif -%}
        {%- else -%}
            {{ free_text.get_parts_as_text_escaped() }}
        {%- endif -%}
      </div>
    </div>

  {% endif %}
</div>
