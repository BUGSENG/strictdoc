<turbo-frame id="diff_result">
{% if results %}
  <div class="diff preloaded" data-controller="diff">
    <div class="diff_controls" left>
      <a id="diff_left_open" class="action_button compact">
        <span>＋</span>
        <span class="action_button_compact__arising">open all modified</span>
      </a>
      <a id="diff_left_close" class="action_button compact">
        <span>－</span>
        <span class="action_button_compact__arising">close all</span>
      </a>
    </div>
    <div class="diff_controls" right>
      <a id="diff_right_open" class="action_button compact">
        <span>＋</span>
        <span class="action_button_compact__arising">open all modified</span>
      </a>
      <a id="diff_right_close" class="action_button compact">
        <span>－</span>
        <span class="action_button_compact__arising">close all</span>
      </a>
    </div>

    <div class="diff_column" left>
      <div class="diff_inner">
      {% with
        document_tree=document_tree_lhs,
        document_tree_iterator=documents_iterator_lhs,
        traceability_index=traceability_index_lhs,
        self_stats=lhs_stats,
        other_stats=rhs_stats,
        side="left"
      %}
        {% include "screens/git/diff_column_content.jinja" %}
      {% endwith %}
      </div>
    </div>
    <div class="diff_column" right>
      <div class="diff_inner">
      {% with
        document_tree=document_tree_rhs,
        document_tree_iterator=documents_iterator_rhs,
        traceability_index=traceability_index_rhs,
        self_stats=rhs_stats,
        other_stats=lhs_stats,
        side="right"
      %}
        {% include "screens/git/diff_column_content.jinja" %}
      {% endwith %}
      </div>
    </div>
  </div>
{% endif %}
</turbo-frame>
