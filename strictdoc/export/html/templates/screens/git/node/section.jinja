{% set section_md5 = self_stats.get_md5_by_node(section) %}
{% set section_modified = not other_stats.contains_section_md5(section_md5) %}

<details
  class="diff_node"
  {% if section_modified %}
    modified="{{ side }}"
  {% endif %}
>
  <summary>
    {%- with badge_text = "S" -%}
      {%- include "components/badge/index.jinja" -%}
    {%- endwith -%}
    <span>
      {{ section.context.title_number_string if section.context.title_number_string else "&nbsp;" * (section.ng_level * 2 - 1) }}
    </span>
    <span>{{ section.title }}</span>
    {% if section_modified and section.reserved_uid is not none and section.reserved_uid|length > 0 %}
      {%- with uid=section.reserved_uid -%}
        {%- include "screens/git/sync/button.jinja" -%}
      {%- endwith -%}
    {% endif %}
  </summary>

  {% include "screens/git/fields/section_fields.jinja" %}

</details>
