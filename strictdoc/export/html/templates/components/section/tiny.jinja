{#
  In this template:
  sdoc_entity = section
#}

{%- if project_config.is_running_on_server %}
  <sdoc-node-controls data-direction="row">
    <a
      href="{{ link_renderer.render_node_link(section, none, link_document_type, allow_local=False) }}"
      class="action_button"
      title="Find it in the document view"
      data-testid="section-find-in-document"
    >{% include "_res/svg_ico16_go_to_doc.jinja" %}</a>
    <turbo-frame>
      <a
        href="/actions/deep_trace/show_full_section?reference_mid={{ sdoc_entity.mid.get_string_value() }}"
        class="action_button"
        data-turbo="true"
        data-turbo-action="replace"
        title="Show in full in modal"
        data-testid="section-show-more-action"
      >{% include "_res/svg_ico16_maximize.jinja" %}</a>
    </turbo-frame>
  </sdoc-node-controls>
{% endif -%}

<sdoc-section>
  {% include "components/section/title/index.jinja" %}
</sdoc-section>
