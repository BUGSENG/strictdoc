{# title // required field for section #}
<sdoc-section-title
  data-level="{{ section.context.title_number_string }}"
  {# data-controller="copy_to_clipboard_button" #}
>
  {%- set h_level = section.ng_level + 1
      if section.ng_level < 6
      else 6 -%}

  <h{{ h_level }}>
    {# initiate the accumulating variable #}
    {%- set field_content_ = "" -%}

    {# add title 'number' part #}
    {%- if section.context.title_number_string -%}
      {%- set field_content_ = field_content_ + section.context.title_number_string + ".&nbsp" -%}
    {%- endif -%}

    {# add title 'value' part #}
    {%- set title = section.reserved_title if section.is_requirement else section.title -%}
    {%- if title is not none -%}
      {%- set field_content_ = field_content_ + title -%}
    {%- endif -%}

    {# include template #}
    {%- with field_content = field_content_ %}
      {%- include "components/field/index.jinja" -%}
    {%- endwith -%}
  </h{{ h_level }}>
</sdoc-section-title>
