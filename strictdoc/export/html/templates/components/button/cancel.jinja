{%- if href is defined -%}
  <a
    href="{{href_cancel}}"
    class="action_button"
    data-turbo="true"
    data-action-type="cancel"
    data-testid="form-cancel-action"
  >{{ name|default('Cancel') }}</a>
{%- else -%}
  <button
    stimulus-modal-cancel-button
    type="button"
    class="action_button"
    data-action-type="cancel"
    data-testid="form-cancel-action"
  >{{ name|default('Cancel') }}</button>
{%- endif -%}
