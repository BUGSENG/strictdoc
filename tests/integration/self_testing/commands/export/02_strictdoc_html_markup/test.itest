REQUIRES: PLATFORM_IS_NOT_WINDOWS

RUN: %strictdoc export "%strictdoc_root/docs" --output-dir="%S/Output"

RUN: %check_exists --file "%S/Output/html/index.html"
RUN: %check_exists --file "%S/Output/html/docs/strictdoc-1-user-guide.html"
RUN: %check_exists --file "%S/Output/html/docs/strictdoc-1-user-guide-TABLE.html"
RUN: %check_exists --file "%S/Output/html/docs/strictdoc-1-user-guide-TRACE.html"
RUN: %check_exists --file "%S/Output/html/docs/strictdoc-1-user-guide-DEEP-TRACE.html"

TODO: etree.parse fails on the "&nbsp;" surprisingly. Fix it later :(
RUN: sed -i.bak 's/\&nbsp;/ /g' "%S/Output/html/docs/strictdoc-1-user-guide.html"
RUN: sed -i.bak 's/\&nbsp;/ /g' "%S/Output/html/docs/strictdoc-1-user-guide-TABLE.html"
RUN: sed -i.bak 's/\&nbsp;/ /g' "%S/Output/html/docs/strictdoc-1-user-guide-TRACE.html"
RUN: sed -i.bak 's/\&nbsp;/ /g' "%S/Output/html/docs/strictdoc-1-user-guide-DEEP-TRACE.html"

RUN: %html_markup_validator "%S/Output/html/index.html"
RUN: %html_markup_validator "%S/Output/html/docs/strictdoc-1-user-guide.html"
RUN: %html_markup_validator "%S/Output/html/docs/strictdoc-1-user-guide-TABLE.html"
RUN: %html_markup_validator "%S/Output/html/docs/strictdoc-1-user-guide-TRACE.html"
RUN: %html_markup_validator "%S/Output/html/docs/strictdoc-1-user-guide-DEEP-TRACE.html"
